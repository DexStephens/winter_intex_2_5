@page
@model winter_intex_2_5.Pages.RecordSummaryModel

@{
    ViewData["Title"] = "Record Summary";
}

<div class="container">
    <main role="main" class="pb-3">
<div>
    <h1 class="header-top-space">Record summary for @Model.SummaryTable.Id</h1>

    @foreach (var photo in Model.Photos)
    {
        <img src="@photo.Url" height="200" width="200" />
    }

    @*need field notes, measurements, and other valuable information*@
    <div>
        @if (!string.IsNullOrEmpty(Model.SummaryTable.Text))
        {
            <h3>Field Notes:</h3>
            <p>@Model.SummaryTable.Text</p>
        }
    </div>
    <div>
        @if (!string.IsNullOrEmpty(Model.SummaryTable.Textiledescription))
        {
            <h3>Textiles</h3>
            <h5>Description:</h5>
            <p>@Model.SummaryTable.Textiledescription</p>
            @if (!string.IsNullOrEmpty(Model.SummaryTable.Textilecolor))
            {
                <h5>Color:</h5>
                <p>@Model.SummaryTable.Textilecolor</p>
            }
            @if (!string.IsNullOrEmpty(Model.SummaryTable.Textilefunction))
            {
                <h5>Function:</h5>
                <p>@Model.SummaryTable.Textilefunction</p>
            }
            @if (!string.IsNullOrEmpty(Model.SummaryTable.Structure))
            {
                <h5>Structure:</h5>
                <p>@Model.SummaryTable.Structure</p>
            }
            else
            {
                <div></div>
            }
        }
        else
        {
            <div></div>
        }
    </div>
    <div>
        @if (Model.BodyAnalysis != null)
        {
            @if (!string.IsNullOrEmpty(Model.BodyAnalysis.SquareNorthSouth))
            {
                <h3>Osteological Data:</h3>
                <h5>Square North South:</h5>
                <p>@Model.BodyAnalysis.SquareNorthSouth</p>
                @if (!string.IsNullOrEmpty(Model.BodyAnalysis.DateofExamination))
                {
                    <h5>Date of Examination:</h5>
                    <p>@Model.BodyAnalysis.DateofExamination</p>
                }
                @if (!string.IsNullOrEmpty(Model.BodyAnalysis.PreservationIndex))
                {
                    <h5>Preservation Index:</h5>
                    <p>@Model.BodyAnalysis.PreservationIndex</p>
                }
                @if (!string.IsNullOrEmpty(Model.BodyAnalysis.HairColor))
                {
                    <h5>Hair Color:</h5>
                    <p>@Model.BodyAnalysis.HairColor</p>
                }
                @if (!string.IsNullOrEmpty(Model.BodyAnalysis.Robust))
                {
                    <h5>Robust:</h5>
                    <p>@Model.BodyAnalysis.Robust</p>
                }
                @if (!string.IsNullOrEmpty(Model.BodyAnalysis.SupraorbitalRidges))
                {
                    <h5>Supraorbital Ridges:</h5>
                    <p>@Model.BodyAnalysis.SupraorbitalRidges</p>
                }
                @if (!string.IsNullOrEmpty(Model.BodyAnalysis.OrbitEdge))
                {
                    <h5>Orbit Edge:</h5>
                    <p>@Model.BodyAnalysis.OrbitEdge</p>
                }
                @if (!string.IsNullOrEmpty(Model.BodyAnalysis.ParietalBossing))
                {
                    <h5>Parietal Bossing:</h5>
                    <p>@Model.BodyAnalysis.ParietalBossing</p>
                }
                @if (!string.IsNullOrEmpty(Model.BodyAnalysis.Gonion))
                {
                    <h5>Gonion:</h5>
                    <p>@Model.BodyAnalysis.Gonion</p>
                }
                @if (!string.IsNullOrEmpty(Model.BodyAnalysis.NuchalCrest))
                {
                    <h5>Nuchal Crest:</h5>
                    <p>@Model.BodyAnalysis.NuchalCrest</p>
                }
                @if (!string.IsNullOrEmpty(Model.BodyAnalysis.ZygomaticCrest))
                {
                    <h5>Zygomatic Crest:</h5>
                    <p>@Model.BodyAnalysis.ZygomaticCrest</p>
