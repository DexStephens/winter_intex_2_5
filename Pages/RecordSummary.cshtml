                    <p>@Model.BodyAnalysis.Notes</p>
                }
                @if (!string.IsNullOrEmpty(Model.BodyAnalysis.Observations))
                {
                    <h5>Observations:</h5>
                    <p>@Model.BodyAnalysis.Observations</p>
                }
                else
                {
                    <div></div>
                }
            }
            else
            {
                <div></div>
            }
        }
        else
        {
            <p>No additional details to display!</p>
        }
    </div>
    <div class="row text-center">
        <a asp-page="/SummaryTable" class="button-primary">Return to Burial Summary</a>
    </div>
</div>
<div class="empty-box4"
    <p></p>
</div>
</main>
</div>